{
    "version": 2,
    "builds": [
        {
            "src": "server/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/index.html",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/auth/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/webhook/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/ws/(.*)",
            "dest": "/server/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}