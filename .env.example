# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret
PGVECTOR_ENABLED=true

# Redis Configuration (for BullMQ workers)
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Supermemory (Optional)
SUPERMEMORY_API_KEY=

# ElevenLabs Voice
ELEVENLABS_API_KEY=your-elevenlabs-key

# WhatsApp Cloud API
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-number-id

# Instagram Graph API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_PAGE_ID=your-page-id

# ManyChat (Optional)
MANYCHAT_API_KEY=

# Stripe Billing
VITE_STRIPE_PUBLIC_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_MONTHLY_49=price_starter_plan
STRIPE_PRICE_ID_MONTHLY_99=price_pro_plan
STRIPE_PRICE_ID_MONTHLY_199=price_enterprise_plan
STRIPE_PRICE_TOPUP_LEADS_1000=price_leads_1000
STRIPE_PRICE_TOPUP_LEADS_2500=price_leads_2500
STRIPE_PRICE_TOPUP_VOICE_100=price_voice_100
STRIPE_PRICE_TOPUP_VOICE_500=price_voice_500

# Email Service (Resend)
RESEND_API_KEY=

# Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Outlook OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# Security & Encryption
ENCRYPTION_KEY=your-32-byte-hex-key-for-aes-256
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_API_BASE=/api
DISABLE_EXTERNAL_API=false
NEXT_PUBLIC_DEMO=false

# Trial & Plan Configuration
INVITE_TRIAL_DAYS=3
REQUIRE_CARD_ON_SIGNUP=false

# Plan Limits - Starter ($49/month)
VOICE_SECONDS_PLAN_49=100
LEADS_LIMIT_PLAN_49=2500

# Plan Limits - Pro ($99/month)
VOICE_SECONDS_PLAN_99=400
LEADS_LIMIT_PLAN_99=7000

# Plan Limits - Enterprise ($199/month)
VOICE_SECONDS_PLAN_199=1500
LEADS_LIMIT_PLAN_199=20000

# Top-up Catalog (Optional JSON Override)
USAGE_TOPUP_CATALOG_JSON=
